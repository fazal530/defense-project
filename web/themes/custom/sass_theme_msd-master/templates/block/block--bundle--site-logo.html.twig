{% set logoURL = file_url(content.field_image[0]['#media'].field_media_image.entity.uri.value) %}
{% set logoAlt = content.field_image[0]['#media'].field_media_image.alt %}
{% set logoLink = content.field_link[0]["#url"] %}

<div class="logo-link-wrapper">
	<a class="logo-link-wrapper__link" href="{{ logoLink }}">
		<img src="{{ logoURL }}" alt="{{ logoAlt }}">
	</a>
</div>
